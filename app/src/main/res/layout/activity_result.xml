<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    android:background="#FFFFFF"
    tools:context=".Result">

    <ImageView
        android:id="@+id/BirdResultImg1"
        android:layout_width="308dp"
        android:layout_height="231dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188"
        app:srcCompat="@drawable/birb" />

    <TextView
        android:id="@+id/BirdResultName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pacific Loon"
        android:textColor="#658EC7"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BirdResultImg1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/BirdResultFact1"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:text="ZOOM ZOOM! Pacific loons are speedy and fly at around 60km per hour!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BirdResultName1"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/BirdIDResultHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bird Matches"
        android:textColor="#4A4A4A"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ReBirdIDBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <Button
        android:id="@+id/ReBirdIDBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find another bird!"
        app:backgroundTint="#658EC7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BirdIDResultHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <ImageButton
        android:id="@+id/HomeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:scaleX="0.25"
        android:scaleY="0.25"
        android:tint="#658EC7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/streamline_icon_bird_house_140x140" />

</androidx.constraintlayout.widget.ConstraintLayout>